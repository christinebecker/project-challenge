<%= simple_form_for @dog do |f| %>
  <% if params[:action] == 'edit' %>
    <h4>Owner's Email: <%= show_user(@dog.owner_id)%></h4>
  <% end %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.input :image, as: :file %>

  <% if @dog.images.any? %>
    <%= image_tag @dog.images.first %>
  <% end %>

  <%= f.button :submit  %>
<% end %>
