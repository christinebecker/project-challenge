<% if dog_counter > 0 && dog_counter % 2 == 0 %>
  <%= image_tag "ad.jpg", class: "img-responsive", alt: "Advertisement" %>
<% end %>
<a href="<%= url_for(dog) %>">
  <article>
    <h2 class="dog-name"><%= dog.name %></h2>
    <%= image_tag url_for(dog.images.first), class: "dog-photo", alt: "Photo of #{dog.name}" %>
  </article>
</a>
